<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SaturnEdit.App"
             RequestedThemeVariant="Default">

    <Application.Resources>
        <ControlRecycling x:Key="ControlRecyclingKey"
                          TryToUseIdAsKey="True" />
        <Color x:Key="RegionColor">Red</Color>
    </Application.Resources>

    <Application.Styles>

        <FluentTheme />
        <DockFluentTheme />
        <StyleInclude Source="Styles/ThemeColors.axaml" />
        <StyleInclude Source="Styles/ControlStyles.axaml" />

        <Style Selector="DockControl">
            <Setter Property="(ControlRecyclingDataTemplate.ControlRecycling)"
                    Value="{StaticResource ControlRecyclingKey}" />
        </Style>

    </Application.Styles>

</Application>