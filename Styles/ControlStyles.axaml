<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Windows Maximized Margin Patch -->
    <Style Selector="Window[WindowState=Maximized]">
        <Setter Property="Padding" Value="{OnPlatform Default='0', Windows='8', x:TypeArguments=Thickness}" />
    </Style>
    
    <!-- Button -->

    <!-- ToggleButton -->

    <!-- RadioButton -->

    <!-- CheckBox -->

    <!-- TextBox -->
    <Style Selector="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource ForegroundPrimary}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="Light" />
    </Style>

    <!-- Slider -->

    <Style Selector="DockControl">
        <Setter Property="(ControlRecyclingDataTemplate.ControlRecycling)" Value="{StaticResource ControlRecyclingKey}" />
    </Style>
</Styles>