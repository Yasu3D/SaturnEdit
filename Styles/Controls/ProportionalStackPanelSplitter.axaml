<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTheme x:Key="{x:Type ProportionalStackPanelSplitter}"
                  TargetType="ProportionalStackPanelSplitter">

        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_Separator" 
                    Background="{DynamicResource SeparatorSecondary}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}" />
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^:vertical">
            <Setter Property="Margin" Value="0,-3,0,0"/>
        </Style>
        
        <Style Selector="^:vertical /template/ Border#PART_Separator">
            <Setter Property="Height" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
        
        <Style Selector="^:horizontal">
            <Setter Property="Margin" Value="-3,0,0,0"/>
        </Style>
        
        <Style Selector="^:horizontal /template/ Border#PART_Separator">
            <Setter Property="Width" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        
    </ControlTheme>

</ResourceDictionary>