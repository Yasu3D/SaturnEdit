<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:chartEditor="clr-namespace:SaturnEdit.Views.ChartEditor"
             xmlns:stageEditor="clr-namespace:SaturnEdit.Views.StageEditor"
             xmlns:contentEditor="clr-namespace:SaturnEdit.Views.ContentEditor"
             xmlns:lang="clr-namespace:SaturnEdit.Assets.Lang"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="SaturnEdit.Views.MainView"
             x:CompileBindings="True">
    <!-- Separate Tab Bar from Explorer + Content -->
    <Grid ColumnDefinitions="41, *">

        <!-- Tab Bar -->
        <Grid Column="0"
              ColumnDefinitions="40, 1">

            <!-- Tabs -->
            <StackPanel Grid.Column="0"
                        Background="{DynamicResource LightBrush}">

                <RadioButton Name="TabChartEditor"
                             Classes="ToggleRadio"
                             GroupName="EditorTabs"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Width="30"
                             Height="30"
                             Margin="5,5,5,0"
                             IsCheckedChanged="EditorTabs_OnIsCheckedChanged"
                             IsChecked="True"
                             ToolTip.ShowDelay="0"
                             ToolTip.HorizontalOffset="5"
                             ToolTip.VerticalOffset="0"
                             ToolTip.Placement="Right">
                    <ToolTip.Tip>
                        <StackPanel>
                            <TextBlock Text="{x:Static lang:Resources.Tabs_ToolTip_ChartEditor}" />
                            <TextBlock Text="{x:Static lang:Resources.Tabs_ToolTip_ChartEditor_Description}"
                                       Foreground="{DynamicResource AnnotationBrush}" />
                        </StackPanel>
                    </ToolTip.Tip>
                    <PathIcon Data="{DynamicResource IconHexagonSparkle}"
                              Width="18"
                              Height="18" />
                </RadioButton>
                
                <RadioButton Name="TabStageEditor"
                             Classes="ToggleRadio"
                             GroupName="EditorTabs"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Width="30"
                             Height="30"
                             Margin="5,5,5,0"
                             IsCheckedChanged="EditorTabs_OnIsCheckedChanged"
                             IsChecked="False"
                             ToolTip.ShowDelay="0"
                             ToolTip.HorizontalOffset="5"
                             ToolTip.VerticalOffset="0"
                             ToolTip.Placement="Right">
                    <ToolTip.Tip>
                        <StackPanel>
                            <TextBlock Text="{x:Static lang:Resources.Tabs_ToolTip_ChartEditor}" 
                                       TextAlignment="Left"/>
                            <TextBlock Text="{x:Static lang:Resources.Tabs_ToolTip_ChartEditor_Description}"
                                       TextAlignment="Left"
                                       Foreground="{DynamicResource AnnotationBrush}" />
                        </StackPanel>
                    </ToolTip.Tip>
                    <PathIcon Data="{DynamicResource IconHexagonSparkle}"
                              Width="18"
                              Height="18" />
                </RadioButton>

                <RadioButton Name="TabContentEditor"
                             Classes="ToggleRadio"
                             GroupName="EditorTabs"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Width="30"
                             Height="30"
                             Margin="5,5,5,0"
                             IsCheckedChanged="EditorTabs_OnIsCheckedChanged"
                             IsChecked="False"
                             ToolTip.ShowDelay="0"
                             ToolTip.HorizontalOffset="5"
                             ToolTip.VerticalOffset="0"
                             ToolTip.Placement="Right">
                    <ToolTip.Tip>
                        <StackPanel>
                            <TextBlock Text="{x:Static lang:Resources.Tabs_ToolTip_ChartEditor}" 
                                       TextAlignment="Left"/>
                            <TextBlock Text="{x:Static lang:Resources.Tabs_ToolTip_ChartEditor_Description}"
                                       TextAlignment="Left"
                                       Foreground="{DynamicResource AnnotationBrush}" />
                        </StackPanel>
                    </ToolTip.Tip>
                    <PathIcon Data="{DynamicResource IconHexagonSparkle}"
                              Width="18"
                              Height="18" />
                </RadioButton>
                
                <Rectangle Width="30"
                           Height="1"
                           Fill="{DynamicResource MenuBorderBrush}"
                           Margin="5,8,5,3" />
                
                
            </StackPanel>

            <!-- Vertical Separator -->
            <Rectangle Grid.Column="1"
                       Fill="{DynamicResource MenuBorderBrushDark}" />

        </Grid>

        <!-- Separator -->
        <TextBlock Grid.Column="1"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Right"
                   Margin="5"
                   Name="TextBlockVersion"
                   Foreground="{DynamicResource MenuBorderBrush}" />

        <!-- Content -->
        <chartEditor:ChartEditorView Grid.Column="1" 
                               Name="ChartEditorView"
                               IsVisible="True"
                               IsEnabled="True"/>
        
        <stageEditor:StageEditorView Grid.Column="1" 
                               Name="StageEditorView"
                               IsVisible="False"
                               IsEnabled="False"/>
        
        <contentEditor:CosmeticsEditorView Grid.Column="1" 
                               Name="ContentEditorView"
                               IsVisible="False"
                               IsEnabled="False"/>

    </Grid>
</UserControl>