<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:chartEditor="clr-namespace:SaturnEdit.Views.ChartEditor"
             xmlns:stageEditor="clr-namespace:SaturnEdit.Views.StageEditor"
             xmlns:contentEditor="clr-namespace:SaturnEdit.Views.ContentEditor"
             xmlns:lang="clr-namespace:SaturnEdit.Assets.Lang"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="SaturnEdit.Views.MainView"
             x:CompileBindings="True">

    <Grid ColumnDefinitions="41, *">
        <!-- Tab Bar -->
        <Grid Column="0"
              ColumnDefinitions="40, 1">

            <!-- Tabs -->
            <StackPanel Grid.Column="0" 
                        Background="{DynamicResource BackgroundPrimary}">

                <RadioButton Name="TabChartEditor"
                             Classes="ToggleRadio"
                             GroupName="EditorTabs"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Width="30"
                             Height="30"
                             Margin="5,5,5,0"
                             IsCheckedChanged="EditorTabs_OnIsCheckedChanged"
                             IsChecked="True"
                             ToolTip.ShowDelay="0"
                             ToolTip.HorizontalOffset="5"
                             ToolTip.VerticalOffset="0"
                             ToolTip.Placement="Right">
                    <ToolTip.Tip>
                        <StackPanel>
                            <TextBlock Text="{x:Static lang:Resources.Tabs_ToolTip_ChartEditor}" />
                            <TextBlock Text="{x:Static lang:Resources.Tabs_ToolTip_ChartEditor_Description}"
                                       Foreground="{DynamicResource AnnotationBrush}" />
                        </StackPanel>
                    </ToolTip.Tip>
                    <PathIcon Data="{DynamicResource IconHexagonSparkle}"
                              Width="18"
                              Height="18" />
                </RadioButton>

                <RadioButton Name="TabStageEditor"
                             Classes="ToggleRadio"
                             GroupName="EditorTabs"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Width="30"
                             Height="30"
                             Margin="5,5,5,0"
                             IsCheckedChanged="EditorTabs_OnIsCheckedChanged"
                             IsChecked="False"
                             ToolTip.ShowDelay="0"
                             ToolTip.HorizontalOffset="5"
                             ToolTip.VerticalOffset="0"
                             ToolTip.Placement="Right">
                    <ToolTip.Tip>
                        <StackPanel>
                            <TextBlock Text="{x:Static lang:Resources.Tabs_ToolTip_ChartEditor}"
                                       TextAlignment="Left" />
                            <TextBlock Text="{x:Static lang:Resources.Tabs_ToolTip_ChartEditor_Description}"
                                       TextAlignment="Left"
                                       Foreground="{DynamicResource AnnotationBrush}" />
                        </StackPanel>
                    </ToolTip.Tip>
                    <PathIcon Data="{DynamicResource IconHexagonSparkle}"
                              Width="18"
                              Height="18" />
                </RadioButton>

                <RadioButton Name="TabContentEditor"
                             Classes="ToggleRadio"
                             GroupName="EditorTabs"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Width="30"
                             Height="30"
                             Margin="5,5,5,0"
                             IsCheckedChanged="EditorTabs_OnIsCheckedChanged"
                             IsChecked="False"
                             ToolTip.ShowDelay="0"
                             ToolTip.HorizontalOffset="5"
                             ToolTip.VerticalOffset="0"
                             ToolTip.Placement="Right">
                    <ToolTip.Tip>
                        <StackPanel>
                            <TextBlock Text="{x:Static lang:Resources.Tabs_ToolTip_ChartEditor}"
                                       TextAlignment="Left" />
                            <TextBlock Text="{x:Static lang:Resources.Tabs_ToolTip_ChartEditor_Description}"
                                       TextAlignment="Left"
                                       Foreground="{DynamicResource AnnotationBrush}" />
                        </StackPanel>
                    </ToolTip.Tip>
                    <PathIcon Data="{DynamicResource IconHexagonSparkle}"
                              Width="18"
                              Height="18" />
                </RadioButton>

                <Rectangle Width="30"
                           Height="1"
                           Fill="{DynamicResource MenuBorderBrush}"
                           Margin="5,8,5,3" />


            </StackPanel>

            <!-- Separator -->
            <Rectangle Grid.Column="1" Fill="{DynamicResource SeparatorSecondary}" />

        </Grid>

        <!-- Separator -->
        <TextBlock Grid.Column="1"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Right"
                   Margin="5"
                   Name="TextBlockVersion"
                   Foreground="{DynamicResource MenuBorderBrush}" />

        <!-- Menu Bar & Content -->
        <Grid Column="1">
            
            <Grid RowDefinitions="40, 1, *">

                <Grid Grid.Row="0"
                      ColumnDefinitions="*, 100"
                      Background="{DynamicResource BackgroundPrimary}"
                      IsHitTestVisible="False">
                    
                </Grid>
                
                <Rectangle Grid.Row="1" Fill="{DynamicResource SeparatorSecondary}" />
                
                <chartEditor:ChartEditorView Grid.Row="2"
                                             Name="ChartEditorView"
                                             IsVisible="True"
                                             IsEnabled="True" />

                <stageEditor:StageEditorView Grid.Row="2"
                                             Name="StageEditorView"
                                             IsVisible="False"
                                             IsEnabled="False" />

                <contentEditor:CosmeticsEditorView Grid.Row="2"
                                                   Name="ContentEditorView"
                                                   IsVisible="False"
                                                   IsEnabled="False" />
                
            </Grid>
            
        </Grid>
        
    </Grid>


</UserControl>