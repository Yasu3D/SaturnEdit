<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SaturnEdit.App"
             RequestedThemeVariant="Dark">

    <Application.Resources>
        <ControlRecycling x:Key="ControlRecyclingKey" TryToUseIdAsKey="True" />
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles/ControlStyles.axaml" />
        <StyleInclude Source="Styles/ColorStyles.axaml" />
        <StyleInclude Source="Styles/DockStyles.axaml" />
        <StyleInclude Source="Styles/IconStyles.axaml" />
        
        <!-- Window -->
        <Style Selector="Window">
            <Setter Property="ExtendClientAreaChromeHints" Value="NoChrome"/>
            <Setter Property="ExtendClientAreaToDecorationsHint" Value="True"/>
        </Style>
    </Application.Styles>

</Application>