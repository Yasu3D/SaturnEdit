<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:SaturnEdit.Controls"
        mc:Ignorable="d"
        d:DesignWidth="350"
        d:DesignHeight="190"
        Width="350"
        Height="190"
        Focusable="True"
        x:Class="SaturnEdit.Windows.Dialogs.NewChart.NewChartWindow"
        Title="{DynamicResource NewChart.Window.Title}"
        CanResize="False">
    <Panel>
        <controls:WindowChrome Name="WindowChrome"
                               ZIndex="99"
                               Classes="ShowCloseOnly"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top" />

        <Grid RowDefinitions="41,*,51">
            <!-- Header -->
            <Grid Grid.Row="0">
                <Border Background="{DynamicResource BackgroundPrimary}"
                        BorderThickness="0,0,0,1"
                        BorderBrush="{DynamicResource SeparatorSecondary}"
                        IsHitTestVisible="False">
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="10,0"
                               Text="{DynamicResource NewChart.Window.Title}" />
                </Border>
            </Grid>

            <!-- Content -->
            <Border Grid.Row="1"
                    Background="{DynamicResource BackgroundPrimary}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Grid ColumnDefinitions="150,20,*"
                      RowDefinitions="40,40"
                      Margin="10">

                    <Rectangle Grid.Row="0"
                               Grid.Column="1"
                               Grid.RowSpan="2"
                               Width="1"
                               HorizontalAlignment="Left"
                               Fill="{DynamicResource SeparatorPrimary}" />

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="{DynamicResource ChartEditor.Inspector.Label.Tempo}" />
                    <TextBox Grid.Row="0"
                             Grid.Column="2"
                             Name="TextBoxTempo"
                             VerticalAlignment="Center"
                             LostFocus="TextBoxTempo_OnLostFocus" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="{DynamicResource ChartEditor.Inspector.Label.Metre}" />

                    <Grid Grid.Row="1"
                          Grid.Column="2"
                          ColumnDefinitions="*,15,*">

                        <TextBox Grid.Column="0"
                                 Name="TextBoxMetreUpper"
                                 VerticalAlignment="Center"
                                 LostFocus="TextBoxMetreUpper_OnLostFocus" />

                        <Rectangle Grid.Column="1"
                                   Width="1"
                                   Fill="{DynamicResource SeparatorPrimary}"
                                   Margin="0,10" />

                        <TextBox Grid.Column="2"
                                 Name="TextBoxMetreLower"
                                 VerticalAlignment="Center"
                                 LostFocus="TextBoxMetreLower_OnLostFocus" />

                    </Grid>
                </Grid>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="{DynamicResource BackgroundPrimary}"
                    BorderThickness="0,1,0,0"
                    BorderBrush="{DynamicResource SeparatorPrimary}">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Name="ButtonCreate"
                            Classes="Themed AccentFull"
                            Height="28"
                            Margin="11,11,9,11"
                            Width="75"
                            Click="ButtonCreate_OnClick">
                        <TextBlock Text="{DynamicResource NewChart.Create}" />
                    </Button>

                    <Button Name="ButtonCancel"
                            Classes="Themed Outlined"
                            Height="28"
                            Margin="9,11,11,11"
                            Width="75"
                            Click="ButtonCancel_OnClick">
                        <TextBlock Text="{DynamicResource Generic.Cancel}" />
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Panel>
</Window>