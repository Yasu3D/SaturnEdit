                                           Margin="78.5,0,0,0"
                                           Fill="{DynamicResource SeparatorPrimary}" />
                                
                                <Rectangle Width="1"
                                           Height="20"
                                           HorizontalAlignment="Left"
                                           Margin="96.75,0,0,0"
                                           Fill="{DynamicResource SeparatorPrimary}" />
                                
                                <Rectangle Width="1"
                                           Height="20"
                                           HorizontalAlignment="Left"
                                           Margin="115,0,0,0"
                                           Fill="{DynamicResource SeparatorPrimary}" />
                                
                                <Rectangle Width="1"
