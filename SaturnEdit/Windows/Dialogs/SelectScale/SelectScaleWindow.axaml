<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:SaturnEdit.Controls"
        mc:Ignorable="d"
        d:DesignWidth="300"
        d:DesignHeight="160"
        Width="300"
        Height="160"
        x:Class="SaturnEdit.Windows.Dialogs.SelectScale.SelectScaleWindow"
        Title="{DynamicResource SelectScale.Window.Title}"
        CanResize="False">
    <Panel>
        <controls:WindowChrome Name="WindowChrome"
                               ZIndex="99"
                               Classes="ShowCloseOnly"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top" />

        <Grid RowDefinitions="41,*,51">
            <!-- Header -->
            <Grid Grid.Row="0">
                <Border Background="{DynamicResource BackgroundPrimary}"
                        BorderThickness="0,0,0,1"
                        BorderBrush="{DynamicResource SeparatorSecondary}"
                        IsHitTestVisible="False">
                    <TextBlock Name="TextBlockWindowTitle"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="10,0"
                               Text="{DynamicResource SelectScale.Window.Title}" />
                </Border>
            </Grid>

            <!-- Content -->
            <Border Grid.Row="1"
                    Background="{DynamicResource BackgroundPrimary}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Grid ColumnDefinitions="80,20,*" 
                      Margin="16"
                      Height="40">
                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="{DynamicResource SelectScale.Scale}" />

                    <Rectangle Grid.Column="1"
                               Fill="{DynamicResource SeparatorPrimary}"
                               Width="1"
                               HorizontalAlignment="Left" />

                    <TextBox Grid.Column="2"
                             Name="TextBoxScale"
                             Height="30" 
                             Text="1.000000"
                             LostFocus="TextBoxScale_OnLostFocus"/>
                </Grid>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="{DynamicResource BackgroundPrimary}"
                    BorderThickness="0,1,0,0"
                    BorderBrush="{DynamicResource SeparatorPrimary}">
                <Panel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Name="ButtonOk"
                                Classes="Themed AccentFull"
                                Height="28"
                                Margin="11,11,9,11"
                                Width="80"
                                Click="ButtonOk_OnClick">
                            <TextBlock Name="TextBlockButtonPrimary"
                                       Text="{DynamicResource Generic.Ok}" />
                        </Button>

                        <Button Name="ButtonCancel"
                                Classes="Themed Outlined"
                                Height="28"
                                Margin="9,11,11,11"
                                Width="80"
                                Click="ButtonCancel_OnClick">
                            <TextBlock Name="TextBlockButtonTertiary"
                                       Text="{DynamicResource Generic.Cancel}" />
                        </Button>
                    </StackPanel>
                </Panel>
            </Border>
        </Grid>
    </Panel>
</Window>