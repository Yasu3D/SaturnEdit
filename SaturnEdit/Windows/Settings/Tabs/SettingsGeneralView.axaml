<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="650"
             d:DesignHeight="610"
             x:Class="SaturnEdit.Windows.Settings.Tabs.SettingsGeneralView">
    <ScrollViewer Background="{DynamicResource BackgroundPrimary}">
        <StackPanel Margin="20">
            <Grid ColumnDefinitions="Auto,*"
                  Margin="0,0,0,20">
                <TextBlock Text="{DynamicResource Settings.General.Languages}"
                           Margin="0,0,20,0" />
                <Rectangle Grid.Column="1"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Center"
                           Height="1"
                           Fill="{DynamicResource SeparatorPrimary}" />
            </Grid>

            <ComboBox Name="ComboBoxLanguage"
                      Width="200"
                      HorizontalAlignment="Left"
                      SelectedIndex="0"
                      SelectionChanged="ComboBoxLanguage_OnSelectionChanged">
                <ComboBoxItem Content="English (US)" />
                <ComboBoxItem Content="日本語 (日本)" />
                <ComboBoxItem Content="简体中文 (中国)" />
            </ComboBox>

            <Grid ColumnDefinitions="Auto,*"
                  Margin="0,40,0,20">
                <TextBlock Text="{DynamicResource Settings.General.OnProgramStart}"
                           Margin="0,0,20,0" />
                <Rectangle Grid.Column="1"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Center"
                           Height="1"
                           Fill="{DynamicResource SeparatorPrimary}" />
            </Grid>

            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10">
                <CheckBox Name="CheckBoxShowSplashScreen" 
                          IsChecked="True"
                          IsCheckedChanged="CheckBoxShowSplashScreen_OnIsCheckedChanged" />
                <TextBlock Text="{DynamicResource Settings.General.ShowSplashScreen}"
                           VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <CheckBox Name="CheckBoxContinueLastSession" 
                          IsChecked="False"
                          IsCheckedChanged="CheckBoxContinueLastSession_OnIsCheckedChanged"/>
                <TextBlock Text="{DynamicResource Settings.General.ContinueLastSession}"
                           VerticalAlignment="Center" />
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>