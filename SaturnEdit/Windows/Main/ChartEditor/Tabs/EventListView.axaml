<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:icon="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
             mc:Ignorable="d"
             d:DesignWidth="500"
             d:DesignHeight="700"
             Background="{DynamicResource BackgroundPrimary}"
             x:Class="SaturnEdit.Windows.Main.ChartEditor.Tabs.EventListView">
    <Grid DockPanel.Dock="Top"
          RowDefinitions="40,1,*,31">
        <TextBlock Grid.Row="0"
                   Text="{DynamicResource ChartEditor.EventList.Header.Events}"
                   FontWeight="Regular"
                   Foreground="{DynamicResource ForegroundPrimary}"
                   Margin="10" />

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Spacing="5"
                    Margin="9,0"
                    HorizontalAlignment="Right">
            <Button Classes="Themed Standard"
                    CornerRadius="3"
                    Width="22"
                    Height="22"
                    Click="ButtonDeleteEvent_OnClick">
                <icon:FluentIcon Icon="Delete"
                                 FontSize="16"
                                 Foreground="{DynamicResource ForegroundPrimary}" />
                <ToolTip.Tip>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource ChartEditor.List.ToolTip.DeleteSelection}" />
                        <TextBlock Name="TextBlockShortcutDeleteSelection" Text="SHORTCUT"
                                   Margin="15,0,0,0"
                                   HorizontalAlignment="Right"
                                   Foreground="{DynamicResource ForegroundSecondary}" />
                    </StackPanel>
                </ToolTip.Tip>
            </Button>

            <Button Classes="Themed Standard"
                    CornerRadius="3"
                    Width="22"
                    Height="22">
                <icon:FluentIcon Icon="Add"
                                 FontSize="16"
                                 Foreground="{DynamicResource ForegroundPrimary}" />
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuItem Name="MenuItemAddTempoChange"
                                  Click="MenuItemAddTempoChange_OnClick">
                            <MenuItem.Header>
                                <TextBlock Text="{DynamicResource ChartEditor.General.Type.Value.TempoChange}"
                                           Foreground="{DynamicResource ForegroundPrimary}" />
                            </MenuItem.Header>
                            <MenuItem.Icon>
                                <PathIcon Data="{DynamicResource IconTempo}"
                                          Foreground="{DynamicResource ForegroundPrimary}" />
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Name="MenuItemAddMetreChange"
                                  Click="MenuItemAddMetreChange_OnClick">
                            <MenuItem.Header>
                                <TextBlock Text="{DynamicResource ChartEditor.General.Type.Value.MetreChange}"
                                           Foreground="{DynamicResource ForegroundPrimary}" />
                            </MenuItem.Header>
                            <MenuItem.Icon>
                                <PathIcon Data="{DynamicResource IconMetre}"
                                          Foreground="{DynamicResource ForegroundPrimary}" />
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Name="MenuItemAddTutorialMarker"
                                  Click="MenuItemAddTutorialMarker_OnClick">
                            <MenuItem.Header>
                                <TextBlock Text="{DynamicResource ChartEditor.General.Type.Value.TutorialMarker}"
                                           Foreground="{DynamicResource ForegroundPrimary}" />
                            </MenuItem.Header>
                            <MenuItem.Icon>
                                <icon:FluentIcon Icon="HatGraduation"
                                                 Foreground="{DynamicResource ForegroundPrimary}" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuFlyout>
                </Button.Flyout>
                <ToolTip.Tip>
                    <TextBlock Text="{DynamicResource ChartEditor.List.ToolTip.AddNewEllipsis}" />
                </ToolTip.Tip>
            </Button>
        </StackPanel>

        <Rectangle Grid.Row="1"
                   Fill="{DynamicResource SeparatorPrimary}" />

        <ScrollViewer Grid.Row="2">
            <ListBox Name="ListBoxEvents"
                     Background="{DynamicResource BackgroundSecondary}"
                     SelectionMode="Multiple" 
                     SelectionChanged="ListBoxEvents_OnSelectionChanged"
                     DoubleTapped="ListBoxEvents_OnDoubleTapped"
                     KeyDown="ListBoxEvents_OnKeyDown"/>
        </ScrollViewer>

        <Border Grid.Row="3"
                VerticalAlignment="Bottom"
                Height="31"
                Background="{DynamicResource BackgroundSecondary}">
            <Rectangle Height="1"
                       Fill="{DynamicResource SeparatorPrimary}"
                       Margin="15"
                       VerticalAlignment="Bottom" />
        </Border>
    </Grid>
</UserControl>