<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="SaturnEdit.Controls.NavigatorDialogueLanguageItem">
    <Grid ColumnDefinitions="100,*" Margin="5">
        <TextBlock Text="{DynamicResource CosmeticEditor.Navigator.Language.Property.LocaleKey}"
                   VerticalAlignment="Center"
                   Margin="5"/>
        <TextBox Grid.Column="1"
                 Name="TextBoxLocaleKey"
                 HorizontalAlignment="Stretch"
                 BorderBrush="Transparent"
                 Background="Transparent"
                 Height="30"
                 CornerRadius="3"
                 VerticalContentAlignment="Center"
                 LostFocus="TextBoxLocaleKey_OnLostFocus" />
    </Grid>
</UserControl>