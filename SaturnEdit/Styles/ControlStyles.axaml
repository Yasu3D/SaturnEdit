<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:icon="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia">
    
    <!-- Windows Maximized Margin Patch -->
    <Style Selector="Window[WindowState=Maximized]">
        <Setter Property="Padding" Value="{OnPlatform Default='0', Windows='8', x:TypeArguments=Thickness}" />
    </Style>

    <!-- TextBlocks -->
    <Style Selector="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource ForegroundPrimary}"/>
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="Light" />
        
        <Style Selector="^:disabled">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundTertiary}"/>
        </Style>
    </Style>
    
    <Style Selector="TextBox">
        <Setter Property="Foreground" Value="{DynamicResource ForegroundPrimary}"/>
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="Light" />
        
        <Style Selector="^:disabled">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundTertiary}"/>
        </Style>
    </Style>
    
    <Style Selector="icon|FluentIcon">
        <Setter Property="Foreground" Value="{DynamicResource ForegroundPrimary}"/>
        
        <Style Selector="^:disabled">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundTertiary}"/>
        </Style>
    </Style>
    
    <Style Selector="PathIcon">
        <Setter Property="Foreground" Value="{DynamicResource ForegroundPrimary}"/>
        
        <Style Selector="^:disabled">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundTertiary}"/>
        </Style>
    </Style>
    
    <Style Selector="SelectableTextBlock">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="Light" />
    </Style>

    <!-- Sliders -->
    <StyleInclude Source="Styles/Slider.axaml"/>
    
    <!-- Separators -->
    <Style Selector="Separator">
        <Setter Property="Background" Value="{DynamicResource SeparatorPrimary}"/>
        <Setter Property="Margin" Value="0, 2" />
    </Style>
    
    <!-- Buttons -->
    <StyleInclude Source="Styles/ButtonStyles.axaml"/>
    
    <!-- ToolTip -->
    <Style Selector="ToolTip">
        <Setter Property="ShowDelay" Value="0"/>
        <Setter Property="HorizontalOffset" Value="0"/>
        <Setter Property="VerticalOffset" Value="0"/>
        <Setter Property="MaxWidth" Value="350"/>
    </Style>
    
    <!-- AvaloniaEdit -->
    <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
    
    <!-- Full Control Re-styles -->
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="Resources/ListBox.axaml"/>
                <ResourceInclude Source="Resources/ListBoxItem.axaml"/>
                <ResourceInclude Source="Resources/CheckBox.axaml"/>
                <ResourceInclude Source="Resources/NumericUpDown.axaml"/>
                <ResourceInclude Source="Resources/ButtonSpinner.axaml"/>
                <ResourceInclude Source="Resources/ComboBoxItem.axaml"/>
                <ResourceInclude Source="Resources/ComboBox.axaml"/>
                <ResourceInclude Source="Resources/TextBox.axaml"/>
                <ResourceInclude Source="Resources/Expander.axaml"/>
                <ResourceInclude Source="Resources/MenuItem.axaml" />
                <ResourceInclude Source="Resources/Menu.axaml"/>
                <ResourceInclude Source="Resources/ToolTip.axaml"/>
                <ResourceInclude Source="Resources/MenuFlyoutPresenter.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>
</Styles>