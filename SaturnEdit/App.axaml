<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SaturnEdit.App"
             RequestedThemeVariant="Dark">
    <Application.Styles>
        <FluentTheme />
        
        <StyleInclude Source="Styles/ControlStyles.axaml" />
        <StyleInclude Source="Styles/ThemeStyles.axaml" />
        <StyleInclude Source="Styles/IconStyles.axaml" />
        
        <!-- Window -->
        <Style Selector="Window">
            <Setter Property="ExtendClientAreaChromeHints" Value="NoChrome"/>
            <Setter Property="ExtendClientAreaToDecorationsHint" Value="True"/>
        </Style>
    </Application.Styles>
    
    <Application.Resources>
        <FontFamily x:Key="MozillaHeadline">avares://SaturnEdit/Assets/Fonts#Mozilla Headline</FontFamily>
        <FontFamily x:Key="NotoPlus1">avares://SaturnEdit/Assets/Fonts#NOTO PLUS 1</FontFamily>
    </Application.Resources>
</Application>