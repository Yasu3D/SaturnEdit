<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="400"
             d:DesignHeight="450"
             x:Class="SaturnEdit.Views.Main.ChartEditor.Tabs.InspectorView">
    <ScrollViewer Background="{DynamicResource BackgroundPrimary}">
        <StackPanel>
            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="{DynamicResource ChartEditor.Inspector.Header.General}"
                               FontWeight="Regular"
                               Foreground="{DynamicResource ForegroundPrimary}" />
                </Expander.Header>

                <Grid ColumnDefinitions="120,20,*"
                      RowDefinitions="30,30,30"
                      RowSpacing="10">
                    <Rectangle Grid.Row="0"
                               Grid.Column="1"
                               Grid.RowSpan="3"
                               Width="1"
                               HorizontalAlignment="Left"
                               Fill="{DynamicResource SeparatorPrimary}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="0"
                               Text="{DynamicResource ChartEditor.General.Timestamp}"
                               VerticalAlignment="Center" />
                    <Grid Grid.Column="2"
                          Grid.Row="0"
                          ColumnDefinitions="*,15,*">
                        <NumericUpDown Grid.Column="0"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Stretch"
                                 Minimum="0"
                                 Value="1" 
                                 FormatString="0"/>

                        <Rectangle Grid.Column="1"
                                   Fill="{DynamicResource SeparatorPrimary}"
                                   Width="1"
                                   Margin="0,5"
                                   HorizontalAlignment="Center" />

                        <NumericUpDown Grid.Column="2"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Stretch"
                                 Minimum="-1"
                                 Maximum="1920"
                                 Value="480" 
                                 FormatString="0"/>
                    </Grid>
                    
                    <TextBlock Grid.Column="0"
                           Grid.Row="1"
                           Text="{DynamicResource ChartEditor.General.Ticks}"
                           VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="2"
                         Grid.Row="1"
                         VerticalAlignment="Center"
                         Value="2400" 
                         FormatString="0"/>
                    
                    <TextBlock Grid.Column="0"
                           Grid.Row="2"
                           Text="{DynamicResource ChartEditor.General.Layer}"
                           VerticalAlignment="Center" />
                    <ComboBox Grid.Column="2"
                          Grid.Row="2"
                          SelectedIndex="0">
                        <ComboBoxItem Content="Example Layer 1"/>
                        <ComboBoxItem Content="Example Layer 2"/>
                        <ComboBoxItem Content="Example Layer 3"/>
                    </ComboBox>
                </Grid>
            </Expander>

            <Rectangle Fill="{DynamicResource SeparatorPrimary}"
                       Height="1"
                       Margin="10,0"/>
            
            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="{DynamicResource ChartEditor.Inspector.Header.Shape}"
                               FontWeight="Regular"
                               Foreground="{DynamicResource ForegroundPrimary}" />
                </Expander.Header>

                <Grid ColumnDefinitions="120,20,*"
                      RowDefinitions="30,30"
                      RowSpacing="10">
                    <Rectangle Grid.Row="0"
                               Grid.Column="1"
                               Grid.RowSpan="2"
                               Width="1"
                               HorizontalAlignment="Left"
                               Fill="{DynamicResource SeparatorPrimary}" />

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="{DynamicResource ChartEditor.General.Position}" />
                    <TextBox Grid.Row="0"
                             Grid.Column="2"
                             VerticalAlignment="Center"
                             Text="30" />
                    
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="{DynamicResource ChartEditor.General.Size}" />
                    <TextBox Grid.Row="1"
                             Grid.Column="2"
                             VerticalAlignment="Center"
                             Text="15" />
                </Grid>
            </Expander>

            <Rectangle Fill="{DynamicResource SeparatorPrimary}"
                       Height="1"
                       Margin="10,0"/>
            
            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="{DynamicResource ChartEditor.Inspector.Header.Judgement}"
                               FontWeight="Regular"
                               Foreground="{DynamicResource ForegroundPrimary}" />
                </Expander.Header>

                <Grid ColumnDefinitions="120,20,*"
                      RowDefinitions="30,30"
                      RowSpacing="10">
                    <Rectangle Grid.Row="0"
                               Grid.Column="1"
                               Grid.RowSpan="2"
                               Width="1"
                               HorizontalAlignment="Left"
                               Fill="{DynamicResource SeparatorPrimary}" />
                    
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="{DynamicResource ChartEditor.General.BonusType}" />
                    <ComboBox Grid.Row="0"
                              Grid.Column="2"
                              SelectedIndex="0"
                              PlaceholderText="-">
                        <ComboBoxItem Content="{DynamicResource ChartEditor.General.BonusType.Value.Normal}"/>
                        <ComboBoxItem Content="{DynamicResource ChartEditor.General.BonusType.Value.Bonus}"/>
                        <ComboBoxItem Content="{DynamicResource ChartEditor.General.BonusType.Value.R}"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="{DynamicResource ChartEditor.General.JudgementType}" />
                    <ComboBox Grid.Row="1"
                              Grid.Column="2"
                              SelectedIndex="0"
                              PlaceholderText="-">
                        <ComboBoxItem Content="{DynamicResource ChartEditor.General.JudgementType.Value.Normal}"/>
                        <ComboBoxItem Content="{DynamicResource ChartEditor.General.JudgementType.Value.Fake}"/>
                        <ComboBoxItem Content="{DynamicResource ChartEditor.General.JudgementType.Value.Autoplay}"/>
                    </ComboBox>
                </Grid>
            </Expander>

            <Rectangle Fill="{DynamicResource SeparatorPrimary}"
                       Height="1"
                       Margin="10,0"/>
            
            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="{DynamicResource ChartEditor.Inspector.Header.Hold}"
                               FontWeight="Regular"
                               Foreground="{DynamicResource ForegroundPrimary}" />
                </Expander.Header>

                <Grid ColumnDefinitions="120,20,*"
                      RowDefinitions="30"
                      RowSpacing="10">

                    <Rectangle Grid.Row="0"
                               Grid.Column="1"
                               Grid.RowSpan="1"
                               Width="1"
                               HorizontalAlignment="Left"
                               Fill="{DynamicResource SeparatorPrimary}" />
                    
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="{DynamicResource ChartEditor.General.RenderType}" />
                    <ComboBox Grid.Row="0"
                              Grid.Column="2"
                              SelectedIndex="0"
                              PlaceholderText="-">
                        <ComboBoxItem Content="{DynamicResource ChartEditor.General.RenderType.Value.Visible}"/>
                        <ComboBoxItem Content="{DynamicResource ChartEditor.General.RenderType.Value.Hidden}"/>
                    </ComboBox>
                </Grid>
            </Expander>
            
            <Rectangle Fill="{DynamicResource SeparatorPrimary}"
                       Height="1"
                       Margin="10,0"/>
            
            <Expander HorizontalAlignment="Stretch" IsExpanded="True">
                <Expander.Header>
                    <TextBlock Text="{DynamicResource ChartEditor.Inspector.Header.LaneToggles}"
                               FontWeight="Regular"
                               Foreground="{DynamicResource ForegroundPrimary}" />
                </Expander.Header>

                <Grid ColumnDefinitions="120,20,*"
                      RowDefinitions="30,30,30,30,30"
                      RowSpacing="10">

                    <Rectangle Grid.Row="0"
                               Grid.Column="1"
                               Grid.RowSpan="1"
                               Width="1"
                               HorizontalAlignment="Left"
                               Fill="{DynamicResource SeparatorPrimary}" />
                    
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="{DynamicResource ChartEditor.General.SweepDirection}" />
                    <ComboBox Grid.Row="0"
                              Grid.Column="2"
                              SelectedIndex="0"
                              PlaceholderText="-">
                        <ComboBoxItem Content="{DynamicResource ChartEditor.General.SweepDirection.Value.Instant}"/>
                        <ComboBoxItem Content="{DynamicResource ChartEditor.General.SweepDirection.Value.Clockwise}"/>
                        <ComboBoxItem Content="{DynamicResource ChartEditor.General.SweepDirection.Value.Counterclockwise}"/>
                        <ComboBoxItem Content="{DynamicResource ChartEditor.General.SweepDirection.Value.Center}"/>
                    </ComboBox>
                </Grid>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>